{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-std=c++11",
                "-fpic",
                "strman.cpp",
                "-o",
                "strman"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            
            "problemMatcher": [
                
                "$gcc",
            ]
        }
    ]
}